<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#98fb98"
    android:id="@+id/list_id">

      <TextView
        android:id="@+id/mag_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        tools:background="@drawable/circularviewred"
        android:gravity="center"
        android:text="1.1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="5.6" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/mag_id">

        <TextView
            android:id="@+id/place_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="215km SW of" />

        <TextView
            android:id="@+id/placeHading_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/place_id"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Tomatlan, Mexico" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Oct 30,2011" />

        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/date_id"
            tools:text="12:16 pm" />
    </RelativeLayout>

</RelativeLayout>